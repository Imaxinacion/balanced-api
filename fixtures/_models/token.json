{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "(CC|BA|NT)[a-zA-Z0-9]{16,32}"
        },
        "href": {
            "type": "string",
            "format": "uri"
        },
        "can_debit": {
            "description": "Flag indicating whether this funding instrument can be debited (true) or not (false).",
            "type": "boolean"
        },
        "can_credit": {
            "description": "Flag indicating whether this funding instrument can be credited (true) or not (false).",
            "type": "boolean"
        },
        "type": {
            "description": "The card type",
            "type": "string",
            "enum": [
              "debit",
              "credit",
              "charge card"
            ]
        },
        "category": {
            "description": "The card category",
            "type": "string",
            "enum": [
              "prepaid",
              "other"
            ]
        },
        "bank_name": {
            "description": "The name of the bank.",
            "type": "string"
        },
        "links": {
            "type": "object",
            "properties": {},
            "additionalProperties": false
        }
    },
    "required": [
        "id",
        "href",
        "can_debit",
        "can_credit",
        "type",
        "category",
        "bank_name",
        "links"
    ],
    "additionalProperties": false
}
